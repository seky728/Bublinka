generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum InventoryStatus {
  AVAILABLE
  CONSUMED
  REMNANT
}

model InventoryItem {
  id        String           @id @default(uuid())
  name      String
  width     Float
  height    Float
  thickness Float
  price     Float
  status    InventoryStatus @default(AVAILABLE)
  parentId  String?
  parent    InventoryItem?  @relation("InventoryItemRemnants", fields: [parentId], references: [id])
  remnants  InventoryItem[] @relation("InventoryItemRemnants")
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([parentId])
  @@index([status])
  @@index([createdAt])
}
